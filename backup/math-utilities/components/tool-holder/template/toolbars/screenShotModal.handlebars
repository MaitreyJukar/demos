<div id="save-screen-shot-modal" class="modal fade">
    <div class="modal-dialog bootstrapped">
        <form class="modal-content form-horizontal">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Name:</h4>
            </div>
            <div class="modal-body">
                <div class="control-group">
                    <p>
                        <input type="text" name="saveStateName" /><span class="help-inline">* Required</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<div id="screen-shot-size-modal" class="modal fade" role="dialog">
    <div class="modal-dialog bootstrapped">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Warning</h4>
            </div>
            <div class="modal-body">
                <p>This screenshot exceeds maximum size. The screenshot will be cropped.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-reply="no">Cancel</button>
                <button type="button" class="btn btn-danger" data-reply="yes">Continue Anyway&hellip;</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
