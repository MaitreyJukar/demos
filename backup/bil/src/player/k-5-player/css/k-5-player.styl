body {
    font-family: 'Muli', sans-serif
    font-size: 16px
    font-weight: 600
    height: 100vh
    margin: 0
    min-width: 1024px
    overflow-x: auto
    overflow-x: hidden
    overflow-y: hidden
    width: 100%

    &.larger-font {
        font-size: 22px
    }

    .highlight {
        background-color: #fff799
    }

    &.body-scroll {
        overflow-x: auto
    }

    * {
        box-sizing: border-box
        image-rendering: optimizequality
    }

    /* For crisp image rendering */
    image-rendering: -moz-crisp-edges /* Firefox */
    image-rendering: -o-crisp-edges /* Opera */
    image-rendering: -webkit-optimize-contrast /* Webkit (non-standard naming) */
    image-rendering: crisp-edges
    -ms-interpolation-mode: nearest-neighbor /* IE (non-standard property) */

    &.ios {
        position: fixed
    }

    .loading {
        bottom: 50%
        height: 100%
        left: 50%
        margin: auto
        position: absolute
        right: 0
        top: 50%
    }

    #main-player-container {
        height: 100vh
        position: relative
        width: 100%

        &.hide-footer {
            #footer-container {
                display: none
            }

            .player-wrapper {
                height: 100vh
            }
        }

        &.hide-footer-elems {
            #footer-container {
                #icon-container {
                    #left-align-controls, #center-align-controls {
                        // visibility: hidden
                    }
                }
            }
        }

        .runtime {
            .learnosity-item {
                &[data-reference='_blank'] {
                    display: none
                }
            }

            .lrn_stimulus_content {
                font-family: 'Muli', sans-serif
                font-size: 16px
                font-stretch: normal
                font-style: normal
                font-weight: 600
                letter-spacing: normal
                line-height: 1.25
                text-align: left
            }

            .lrn, .lrn .mq-math-mode *, .lrn .mq-math-mode :after, .lrn .mq-math-mode :before {
                font-family: 'Muli', sans-serif
                font-size: 16px
                font-weight: 600
            }
        }
    }

    .scrollHorizontal {
        min-width: 1024px
        overflow-x: scroll
    }

    .shell-container {
        position: relative
        width: 100%
    }

    #main-question-container {
        height: 81%
    }

    .player-wrapper {
        height: calc(100vh - 88px)
        min-width: 1024px
        overflow-y: auto
        padding: 20px 100px
        position: relative
        transition: height .5s ease

        &.expanded {
            height: calc(100vh - 140px)
        }

        &.remove-padding {
            padding: 2% 20% 0
        }

        &.invisible {
            visibility: hidden
        }

        .pages-container {
            .page-container {
                .component-row-container {
                    display: flex
                    margin-bottom: 20px
                    vertical-align: top

                    &.hide {
                        margin-bottom: 0
                    }

                    .component-col-container {
                        max-width: calc(100vw - 200px)

                        .component-wrapper {
                            .control-button-container {
                                margin-top: 20px

                                .tryAgain {
                                    margin-right: 5px
                                }
                            }

                            .storybook-container {
                                margin-bottom: 20px

                                /* Should be fixed inside storybook player */
                                #bim-f-slide-holder {
                                    margin-left: 25%
                                }
                            }

                            &.finished {
                                .highlighter-container {
                                    .highlight-show-me-container {
                                        display: none
                                    }

                                    .highlighter-item {
                                        pointer-events: none

                                        .lrn_toolbar {
                                            visibility: hidden
                                        }
                                    }
                                }

                                .top-buttons {
                                    display: none !important
                                }
                            }

                            .top-buttons {
                                margin-top: -45px
                                position: absolute
                                z-index: 10

                                .drag-handle {
                                    background: #eaeaea
                                    cursor: move
                                    display: inline-block
                                    height: 100%
                                    left: -15px
                                    padding: 8px 0
                                    position: absolute
                                    width: 15px

                                    &:hover {
                                        background: #d2cfcf
                                    }

                                    .drag-dot {
                                        background: #9e9797
                                        height: 4px
                                        margin: 4px 5px
                                        width: 4px
                                    }
                                }

                                .lrn_toolbar {
                                    height: 45px

                                    button {
                                        &.lrn_clear {
                                            &:before {
                                                content: '\E608'
                                            }
                                        }

                                        &.lrn_undo {
                                            &:before {
                                                content: '\E645'
                                            }
                                        }

                                        &.lrn_redo {
                                            &:before {
                                                content: '\E646'
                                            }
                                        }

                                        &:before {
                                            font-family: LearnosityIconsRegular
                                            font-size: .7em
                                            padding-right: .5em
                                            position: relative
                                            top: 0
                                        }
                                    }

                                    &.only-icons {
                                        display: flex
                                        justify-content: space-between

                                        button {
                                            font-size: 0
                                            height: 30px
                                            width: 30px

                                            &:before {
                                                font-size: 20px
                                                padding-left: 0
                                                padding-right: 0
                                                top: 2px
                                            }
                                        }
                                    }
                                }
                            }

                            .highlighter-container {
                                display: inline-block
                                overflow: hidden
                                white-space: nowrap

                                > * {
                                    display: inline-block
                                    vertical-align: middle
                                    white-space: normal
                                }

                                .highlighter-item {
                                    overflow: hidden

                                    > .row {
                                        width: 500px
                                    }
                                }

                                &.display-answer {
                                    .highlighter-item {
                                        display: none
                                    }

                                    .highlight-show-me-answer-wrapper {
                                        display: block
                                    }
                                }

                                .highlight-show-me-answer-wrapper {
                                    color: #000
                                    display: none
                                    font-family: 'Muli', sans-serif
                                    user-select: none
                                }

                                .highlight-show-me-btn {
                                    background-color: #fff
                                    border: solid 2px #1e8508
                                    border-radius: 1.5vh
                                    box-shadow: inset 0 0 5px 0 #d8d8d8
                                    color: #1e8508
                                    font-family: Signika
                                    font-size: 16px
                                    font-stretch: normal
                                    font-style: normal
                                    font-weight: 600
                                    height: 40px
                                    padding: 1px 6px
                                    text-transform: capitalize
                                    width: 104px

                                    &[disabled] {
                                        background: #d8d8d8
                                        background-color: #d8d8d8
                                        box-shadow: 0 4px 0 0 #fff
                                        pointer-events: none
                                    }
                                }

                                &.show-menu {
                                    .lrn_widget.lrn_highlight {
                                        .lrn_toolbar {
                                            display: block
                                        }
                                    }

                                    &.small-buttons {
                                        .lrn_widget.lrn_highlight {
                                            .lrn_toolbar {
                                                display: flex
                                                justify-content: space-between

                                                button {
                                                    font-size: 0
                                                    height: 30px
                                                    width: 30px

                                                    &:before {
                                                        font-size: 20px
                                                        padding-left: 0
                                                        padding-right: 0
                                                        top: 2px
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }

                                .lrn_widget.lrn_highlight {
                                    .lrn_response_input_wrapper {
                                        border: none
                                    }

                                    .lrn_toolbar {
                                        display: none
                                        min-height: 0
                                        z-index: 10

                                        button {
                                            vertical-align: baseline
                                        }
                                    }

                                    .lrn_canvas_drawing .lrn_canvas.lrn_paintable {
                                        cursor: url('./pencil.cur'), crosshair
                                        max-width: 100vw
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }

        .question-container {
            margin-bottom: 30px
            width: 100%

            .layout {
                margin-bottom: 20px
            }

            .multi-layout {
                .multi-part {
                    display: inline-block
                    margin-right: 2%
                    vertical-align: top

                    .container table {
                        font-size: 15px
                        height: 502px
                    }
                }

                .customImg {
                    margin-left: 7%
                }
            }

            .control-button-container {
                margin-bottom: 1%
                margin-top: 1.5%
                position: relative

                .right-align-controls {
                    float: left
                    margin-right: 10px
                }

                .continue {
                    display: inline-block
                    padding-right: .4%

                    &.hide {
                        display: none
                    }

                    .bil-icon-arrow-next {
                        font-size: 1.5em
                        line-height: .6
                    }

                    .bil-icon-arrow-next:before {
                        vertical-align: middle
                    }
                }
            }

            .learnosity-item {
                width: 100%
            }
        }

        .finish-button-container {
            margin-bottom: 1%
            margin-right: 10px
            margin-top: 1.5%
            text-align: left

            .finish {
                height: 45px
                margin-right: 30px
                padding-right: .4%

                .finish-btn-text {
                    display: inline-block
                    margin-right: 6px
                    text-transform: uppercase
                }

                .bil-icon-tick {
                    display: inline-block
                    font-size: 1.6em
                    line-height: .6
                    vertical-align: middle
                }

                .bil-icon-tick:before {
                    line-height: .5
                }
            }

            .info-button-container {
                display: inline-block
                height: 45px
                line-height: .6
                position: relative
                text-transform: uppercase
                vertical-align: bottom

                .infoBtn {
                    background-color: #ffffff
                    border: 2px solid #0F74D3
                    border-radius: 6px
                    box-sizing: border-box
                    color: #0F74D3
                    font-family: 'Source Sans Pro'
                    font-size: 1em
                    font-weight: 600
                    height: 45px
                    margin: 0
                    padding: .5em 1em
                    position: relative
                    text-align: center
                    text-transform: uppercase

                    &:hover {
                        border-color: #0d67bc
                        color: #0d67bc
                    }

                    &:focus {
                        border-color: #0d67bc
                        color: #0d67bc
                    }

                    &:active {
                        top: 2px
                    }

                    &[disabled] {
                        border-color: #0f74d3
                    }
                }
            }
        }

        .desmos-item {
            height: 500px
            min-width: 700px

            iframe {
                height: 100%
                width: 100%
            }
        }

        .comp-type-desmos {
            &.answer-shown {
                .show-me-desmos-item {
                    display: block
                    height: 500px
                    min-width: 700px
                    pointer-events: none
                }

                .desmos-item {
                    display: none
                }

                .show-me-desmos-button-wrapper {
                    display: none
                }
            }

            .show-me-desmos-item {
                display: none
            }

            .desmos-show-me-btn {
                background-color: #fff
                border: solid 2px #1e8508
                border-radius: 1.5vh
                box-shadow: inset 0 0 5px 0 #d8d8d8
                color: #1e8508
                font-family: Signika
                font-size: 16px
                font-stretch: normal
                font-style: normal
                font-weight: 600
                height: 40px
                margin-top: 20px
                padding: 1px 6px
                text-transform: capitalize
                width: 104px

                &[disabled] {
                    background: #d8d8d8
                    background-color: #d8d8d8
                    box-shadow: 0 4px 0 0 #fff
                    pointer-events: none
                }
            }
        }

        .animation-container {
            margin-bottom: 30px

            .animation-wrapper {
                margin-bottom: 20px
            }
        }

        @media screen and (max-width: 1225px) {
            .desmos-item, .show-me-desmos-item {
                min-width: 593px
            }
        }
    }

    .click-state {
        background-color: #ec4067
        border-radius: 7px
    }

    button {
        font-size: 13.3333px
        line-height: normal
    }

    .controlBtn {
        background: linear-gradient(to bottom, #20b700, #1e8508)
        background-color: #1eaa00
        border: 0
        border-radius: 7px
        box-shadow: 0 4px 0 #d9d9d9
        // box-shadow: 0 -4px 0 0 #ba2c4d inset
        box-sizing: border-box
        color: #ffffff
        font-family: 'Source Sans Pro'
        font-family: signika, sans-serif
        font-size: 1.2em
        font-weight: 700
        padding: .5em 1em
        text-align: center

        &:not([disabled]) {
            &:hover {
                background-color: #1eaa00
                // box-shadow: 0 -4px 0 0 #ba2c4d inset
            }

            &:focus {
                background-color: #1eaa00
                // box-shadow: 0 -4px 0 0 #ba2c4d inset
            }

            &:active {
                background-color: #1eaa00
                // box-shadow: 0 0 0 0 #ffffff
                position: relative
                top: 2px
            }
        }
    }

    button[disabled] {
        background: #d8d8d8
        background-color: #d8d8d8
        box-shadow: 0 4px 0 0 #ffffff
        pointer-events: none
    }

    button:hover {
        cursor: pointer
    }

    .hide {
        display: none !important
    }

    @media screen and (max-width: 1024px) {
        .player-wrapper {
            padding: 20px 40px

            .pages-container {
                .page-container {
                    .component-row-container {
                        .component-col-container {
                            max-width: calc(100vw - 80px)
                        }
                    }
                }
            }
        }
    }

    @media screen and (min-width: 1025px) and (max-width: 1366px) {
        .player-wrapper {
            padding: 20px 50px

            .pages-container {
                .page-container {
                    .component-row-container {
                        .component-col-container {
                            max-width: calc(100vw - 100px)
                        }
                    }
                }
            }
        }
    }

    strong {
        .MathJax * {
            font-weight: 700
        }
    }

    // To be cleaned
    .question-container.half-layout {
        .lhs-container {
            display: inline-block
            vertical-align: top
            width: 40%
        }

        .custom-container {
            display: inline-block
            padding-top: 0
            vertical-align: top
            width: 60%
        }
    }
}

.control-tpl-button {
    background-color: #ffffff
    border: solid 2px #1e8508
    border-radius: 11px
    border-radius: 1.5vh !important
    box-shadow: inset 0 0 5px 0 #d8d8d8
    color: #1e8508
    font-family: 'Signika', sans-serif
    font-size: 22px
    font-weight: 600
    height: 40px
    padding: .3vh 2vh .8vh !important
    position: relative
    text-transform: capitalize
    width: 104px

    .icon {
        display: inline-block
        font-size: .7em
        height: 20px
        left: 20px
        position: absolute
        top: 10px
        vertical-align: top
        width: 16px
    }

    span {
        color: #1e8508
        font-family: Signika
        font-size: 16px
        font-stretch: normal
        font-style: normal
        font-weight: 600
        left: 42px
        letter-spacing: normal
        line-height: 2.2
        position: absolute
        text-align: center
        top: 2px
    }
}

.tryAgain {
    // width: 110px
    .icon {
        font-size: .8em
        left: 7px
        width: 15px
    }

    span {
        left: 24px
    }
}

.show-answer {
    // width: 110px
    .icon {
        font-size: .9em
        left: 7px
        width: 14px
    }

    span {
        left: 25px
    }
}
