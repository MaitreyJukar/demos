body {
    font-family: SourceSansPro-Bold, Source Sans Pro
    height: 100vh
    margin: 0
    min-width: 1024px
    overflow-x: auto
    overflow-x: hidden
    overflow-y: hidden
    width: 100%

    .highlight {
        background-color: #fff799
    }

    &.body-scroll {
        overflow-x: auto
    }

    * {
        box-sizing: border-box
    }

    #main-player-container {
        height: 100vh
        position: relative
        width: 100%
    }

    &.ios {
        position: fixed
    }

    .loading {
        bottom: 50%
        height: 100%
        left: 50%
        margin: auto
        position: absolute
        right: 0
        top: 50%
    }

    .runtime {
        .lrn_stimulus_content {
            font-family: 'Source Sans Pro', sans-serif
            font-size: 16px
            font-stretch: normal
            font-style: normal
            font-weight: normal
            letter-spacing: normal
            line-height: 1.25
            text-align: left
        }
    }

    .scrollHorizontal {
        min-width: 1024px
        overflow-x: scroll
    }

    .shell-container {
        position: relative
        width: 100%
    }

    #main-question-container {
        height: 81%
    }

    .player-wrapper {
        height: calc(100vh - 50px)
        min-width: 1024px
        overflow-y: auto
        padding: 20px 100px
        position: relative
        transition: height .5s ease

        &.expanded {
            height: calc(100vh - 107px)
        }

        &.remove-padding {
            padding: 2% 20% 0
        }

        &.invisible {
            visibility: hidden
        }

        .question-container {
            margin-bottom: 30px
            width: 100%

            .layout {
                margin-bottom: 20px
            }

            .multi-layout {
                .multi-part {
                    display: inline-block
                    margin-right: 2%
                    vertical-align: top

                    .container table {
                        font-size: 15px
                        height: 502px
                    }
                }

                .customImg {
                    margin-left: 7%
                }
            }

            .control-button-container {
                float: left
                margin-bottom: 1%
                margin-top: 1.5%
                position: relative
                width: 100%

                &.info-last-question {
                    .info-button-container {
                        float: none
                    }
                }

                .right-align-controls {
                    margin-right: 10px
                }

                .continue {
                    display: inline-block
                    padding-right: .4%

                    &.hide {
                        display: none
                    }

                    .bil-icon-arrow-next {
                        font-size: 1.5em
                        line-height: .6
                    }

                    .bil-icon-arrow-next:before {
                        vertical-align: middle
                    }
                }
            }

            .learnosity-item {
                width: 100%

                &.replace-answers {
                    .lrn .mq-math-mode *, .lrn .mq-math-mode :after, .lrn .mq-math-mode :before {
                        font-family: Symbola, Times New Roman, serif !important
                    }

                    .lrn_response_wrapper {
                        span.lrn_responseIndex {
                            display: none
                        }
                    }
                }

                .lrn_math_editable {
                    text-align: center
                }
            }
        }

        .info-button-container {
            display: inline-block
            float: right
            height: 45px
            line-height: .6
            position: relative
            text-transform: uppercase
            vertical-align: bottom

            &:empty {
                display: none
            }

            .infoBtn {
                background-color: #ffffff
                border: 2px solid #0F74D3
                border-radius: 6px
                box-sizing: border-box
                color: #0F74D3
                font-family: 'Source Sans Pro'
                font-size: 1em
                font-weight: 600
                height: 45px
                margin: 0
                padding: .5em 1em
                position: relative
                text-align: center
                text-transform: uppercase

                &:hover {
                    border-color: #0d67bc
                    color: #0d67bc
                }

                &:focus {
                    border-color: #0d67bc
                    color: #0d67bc
                }

                &:active {
                    top: 2px
                }

                &[disabled] {
                    border-color: #0f74d3
                }
            }
        }

        .finish-button-container {
            margin-bottom: 1%
            margin-right: 10px
            margin-top: 1.5%
            text-align: left

            .finish {
                height: 45px
                margin-right: 30px
                padding-right: .4%

                .finish-btn-text {
                    display: inline-block
                    margin-right: 6px
                    text-transform: uppercase
                }

                .bil-icon-tick {
                    display: inline-block
                    font-size: 1.6em
                    line-height: .6
                    vertical-align: middle
                }

                .bil-icon-tick:before {
                    line-height: .5
                }
            }

            .info-button-container {
                float: none
            }
        }

        .desmos-item {
            height: 500px
            min-width: 700px

            iframe {
                height: 100%
                width: 100%
            }
        }

        .animation-container {
            margin-bottom: 30px

            .animation-wrapper {
                margin-bottom: 20px
            }
        }

        @media screen and (max-width: 1225px) {
            .desmos-item {
                min-width: 593px
            }
        }
    }

    .click-state {
        background-color: #ec4067
        border-radius: 7px
    }

    .controlBtn {
        background-color: #ec4067
        border: 0
        border-radius: 7px
        box-shadow: 0 -4px 0 0 #ba2c4d inset
        box-sizing: border-box
        color: #ffffff
        font-family: 'Source Sans Pro'
        font-size: 1.2em
        font-weight: 700
        padding: .5em 1em
        text-align: center

        &:not([disabled]) {
            &:hover {
                background-color: #cd3558
                box-shadow: 0 -4px 0 0 #ba2c4d inset
            }

            &:focus {
                background-color: #cd3558
                box-shadow: 0 -4px 0 0 #ba2c4d inset
            }

            &:active {
                background-color: #ec4067
                box-shadow: 0 0 0 0 #ffffff
                position: relative
                top: 2px
            }
        }
    }

    button[disabled] {
        background-color: #d8d8d8
        box-shadow: 0 4px 0 0 #ffffff
        pointer-events: none
    }

    button:hover {
        cursor: pointer
    }

    .hide {
        display: none !important
    }

    @media screen and (max-width: 1024px) {
        .player-wrapper {
            padding: 20px 40px
        }
    }

    @media screen and (min-width: 1025px) and (max-width: 1366px) {
        .player-wrapper {
            padding: 20px 50px
        }
    }

    strong {
        .MathJax * {
            font-weight: 700
        }
    }

    // To be cleaned
    .question-container.half-layout {
        .lhs-container {
            display: inline-block
            vertical-align: top
            width: 40%
        }

        .custom-container {
            display: inline-block
            padding-top: 0
            vertical-align: top
            width: 60%
        }
    }
}
