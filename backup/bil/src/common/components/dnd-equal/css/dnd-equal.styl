
.dnd-tool-container {
    width: 1024px

    .draggable {
        background-color: #f00
        border-radius: 50%
        display: inline-block
        height: 50px
        margin: 5px
        width: 50px

        &.ui-draggable-dragging {
            box-shadow: 0 2px 8.55px .45px rgba(0, 0, 0, .5)
            z-index: 10
        }

        &:not(.ui-draggable-disabled) {
            cursor: pointer
        }

        &.ui-draggable-disabled {
            opacity: .5
        }
    }

    &.correct {
        background-color: #ebf6e6
        border-left: 5px solid #65a00d
        padding: 5px

        .validation-mark {
            .validation-icon {
                &.correct-icon {
                    display: block
                }
            }
        }
    }

    &.incorrect {
        background-color: #fbe3e3
        border-left: 5px solid #e14747
        padding: 5px

        .validation-mark {
            .validation-icon {
                &.incorrect-icon {
                    display: block
                }
            }
        }
    }

    &.selection-mode {
        &:not(.dragging) {
            .work-zone-container {
                .work-zone {
                    .dropslot {
                        cursor: pointer

                        .drop-zone {
                            &:empty {
                                &:hover {
                                    &:not(.ui-droppable-hover) {
                                        background: rgba(255, 0, 0, .12)
                                        border-radius: 50%
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    &.type-drop-zones {
        .draggables {
            .draggable {
                &.ui-draggable-dragging {
                    height: 20px
                    width: 20px
                }
            }
        }
    }

    .groups-label {
        color: #012a55
        display: inline-block
        font-size: 22px
    }

    .components {
        display: inline-block
        margin: 10px 34% 20px

        .draggables {
            display: inline-block
            width: 85%

            .draggable {
                border: 2px solid transparent

                &.tile-selected {
                    &:not(.ui-draggable-disabled) {
                        box-shadow: 0 2px 8.55px .45px rgba(0, 0, 0, .5)
                    }
                }
            }
        }

        .controls {
            display: none
            float: right
            width: 14%
        }
    }

    .work-zone-container {
        padding-bottom: 30px
        white-space: nowrap

        > * {
            white-space: normal
        }

        .work-zone {
            align-items: center
            display: inline-flex
            flex-direction: row
            flex-wrap: wrap
            justify-content: flex-start
            vertical-align: middle

            .dropslot {
                border: 4px solid #C2272D
                border-radius: 1em
                display: inline-block
                height: 138px
                margin: 10px
                position: relative
                width: 138px

                .close {
                    background: url('data:image/png;base64,')
                    background-size: cover
                    display: none
                    float: right
                    height: 25px
                    position: absolute
                    right: -16px
                    top: -16px
                    width: 25px

                    &:not(.disabled) {
                        cursor: pointer
                    }
                }

                .drop-zone {
                    float: left
                    height: 20px
                    margin: 5px 0 0 5px
                    width: 20px

                    &:empty {
                        &.ui-droppable-hover {
                            background: rgba(255, 0, 0, .12)
                            border-radius: 50%
                        }
                    }

                    .draggable {
                        margin: 0
                    }
                }
            }

            .add-dropslot {
                background: #F2F2F2
                border: 4px solid #CCCCCC
                border-radius: 1em
                display: inline-block
                height: 138px
                margin: 10px
                width: 138px

                &:not(.disabled) {
                    cursor: pointer
                }

                .vertical-bar {
                    background: #CCCCCC
                    height: 65px
                    left: calc(50% - 10px)
                    position: relative
                    top: 25%
                    width: 20px
                }

                .horizontal-bar {
                    background: #CCCCCC
                    height: 20px
                    left: 25%
                    position: relative
                    top: -10px
                    width: 65px
                }
            }

            .draggable {
                float: left
                height: 20px
                margin: 5px 0 0 5px
                width: 20px

                &:not(.ui-draggable-disabled) {
                    box-shadow: 0 2px 8.55px .45px rgba(0, 0, 0, .5)
                }
            }
        }

        .work-zone.allow-remove:not(.min-reached) {
            .close {
                display: inline
            }
        }
    }

    .validation-mark {
        display: inline-block
        vertical-align: middle

        .validation-icon {
            display: none
            margin-left: -10px

            &.correct-icon {
                color: #008000
                font-size: 40px
            }

            &.incorrect-icon {
                color: #dc1212
                font-size: 60px
            }
        }
    }
}
