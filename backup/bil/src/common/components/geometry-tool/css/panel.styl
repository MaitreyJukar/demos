.btn-slider {
    background-color: #dcf0ff;
    min-width: 30px;
    height: 88px;
    position: absolute;
    border-radius: 3px;
    font-size: 24px;
    line-height: 88px;
    cursor: pointer
    &.start-slider {
        left: 0;
        top: 0;
        z-index: 1;
    }
    &.end-slider {
        left: 100%;
        top: 0;
        transform: translateX(-100%);
    }
    &.disabled-btn {
        opacity: 0.3;
        cursor: default;
    }
}

