.checkbox-container *, .checkbox-container *:before, .checkbox-container *:after, .radio-button-container *, .radio-button-container *:before, .radio-button-container *:after {
    box-sizing: border-box
}

.radio-button-container {
    padding: 8px
}

.measure-btn {
    &.measure-btn-inline {
        display: inline-block
    }

    input[type='radio'] {
        opacity: 0
        position: absolute

        &:checked + label:before {
            border-color: #012955
        }

        &:checked + label:after {
            transform: scale(1)
        }
    }

    label {
        cursor: pointer
        display: inline-block
        font-size: 14px
        height: 20px
        line-height: 20px
        margin-bottom: 0
        padding-left: 25px
        padding-right: 10px
        position: relative
        vertical-align: bottom

        &:before, &:after {
            border-radius: 50%
            content: ''
            position: absolute
            transition: all .3s ease
            transition-property: transform, border-color
        }

        &:before {
            border: 2px solid #012955
            height: 20px
            left: 0
            top: 0
            width: 20px
        }

        &:after {
            background: #012955
            height: 10px
            left: 5px
            top: 5px
            transform: scale(0)
            width: 10px
        }
    }
}

.checkbox-container {
    display: inline-block
    margin: 8px
    position: relative
    text-align: left

    label {
        cursor: pointer
        display: inline
        line-height: 18px

        &:not(:empty) {
            padding-left: 10px
        }

        &:before, &:after {
            content: ''
            left: 0
            position: absolute
            top: 0
        }

        &:before {
            background: #b6e0ff
            border: 2px solid #012955
            border-radius: 2px
            cursor: pointer
            height: 18px
            transition: background .3s
            width: 18px
        }
    }

    input[type='checkbox'] {
        display: block
        float: left
        font-size: inherit
        margin: 0
        outline: 0
        visibility: hidden
        width: 18px

        &:checked {
            + label:before {
                background: #012955
                border: none
            }

            + label:after {
                border: 2px solid #ffffff
                border-right-style: none
                border-top-style: none
                height: 7px
                transform: translate(3px, 3px) rotate(-45deg)
                width: 13px
            }
        }

        &:disabled {
            + label:before {
                border-color: rgba(0, 0, 0, .26)
            }

            &:checked {
                + label:before {
                    background: rgba(0, 0, 0, .26)
                }
            }
        }
    }
}

.editable-label {
    position: absolute;
    z-index: 1;
