.custom-desmos-container {
    .desmos-graph-holder {
        height: 200px;
        min-height: 200px;
        min-width: 200px;
    }
    &.disabled{
        pointer-events: none;
    }
    &.correct {
        background-color: #ebf6e6;
        border-left: 5px solid #65a00d;
        margin-left: -10px;
        margin-top: -5px;
        padding: 5px;

        .right-section {
            display: inline-block;
            vertical-align: middle;

            .validation-icon {
                &.correct-icon {
                    color: #0da939;
                    display: block;
                    font-size: 40px;
                    height: 40px;
                    width: 40px;
                }
            }
        }
    }

    &.incorrect {
        background-color: #fbe3e3;
        border-left: 5px solid #e14747;
        margin-left: -10px;
        margin-top: -5px;
        padding: 5px;

        .right-section {
            display: inline-block;
            vertical-align: middle;

            .validation-icon {
                &.incorrect-icon {
                    color: #88001b;
                    display: block;
                    font-size: 60px;
                    height: 60px;
                    width: 60px;
                }
            }
        }
    }
}

