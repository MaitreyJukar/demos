.popup-wrapper {
    background-color: rgba(0, 0, 0, .6)
    height: 100%
    left: 0
    position: absolute
    top: 0
    width: 100%
    z-index: 22222

    .popup-main {
        background-color: #ffffff
        border-radius: 2px
        box-shadow: 19px 34px 56.4px 3.6px rgba(0, 0, 0, .24)
        left: 50%
        min-width: 216px
        padding: 16px
        position: absolute
        top: 50%
        transform: translate(-50%, -50%)
        -webkit-transform: translate(-50%, -50%)

        .content-holder {
            display: inline-block
            margin-top: 31px
            text-align: center
            width: 100%

            .text-node {
                display: inline-block
                font-size: 20px
                font-weight: 400
                line-height: 1.1
                margin-left: 8px
                text-align: center
                vertical-align: middle
            }

            .pretext-icon-holder {
                -ms-user-select: none
                border-radius: 50%
                font-size: 36px
                line-height: 18px
                text-align: center
                user-select: none
                vertical-align: middle

                span {
                    -ms-user-select: none
                    border-radius: 50%
                    color: #fff
                    user-select: none

                    &::before {
                        display: block
                    }
                }
            }
        }

        .buttons-holder {
            display: inline-block
            margin-bottom: 8px
            margin-top: 32px
            text-align: center
            width: 100%

            button {
                background-color: #666666
                border: 0
                border-radius: 2px
                box-shadow: 1px 2px 2.82px .18px rgba(0, 0, 0, .24)
                color: #ffffff
                display: inline-block
                font-size: 16px
                font-weight: 600
                line-height: 1
                margin: 0 8px
                min-width: 72px
                padding: 6px 12px
                text-align: center

                .label-container {
                    color: #ffffff
                    display: inline-block
                    font-size: 16px
                    font-weight: 400
                    line-height: 20px
                    margin-left: 10px
                    margin-right: 10px
                    text-align: center
                    vertical-align: middle
                }

                i {
                    color: #ffffff
                    display: inline-block
                    font-size: 24px
                    line-height: 32px
                    text-align: left
                    vertical-align: middle

                    &::before {
                        display: block
                    }
                }
            }
        }

        .close-icon-holder {
            color: #505050
            font-size: 24px
            line-height: 32px
            position: absolute
            right: 16px
            text-align: center

            button {
                &.bil-icon-close {
                    background-color: transparent
                    border: 0
                    border-radius: 50%
                    font-size: 24px
                    padding: 2px
                }
            }
        }
    }
}

body:not(.touch-device) .popup-wrapper .popup-main:active:focus, body:not(.touch-device) .popup-wrapper .popup-main:focus {
    position: absolute
}

.popup-wrapper button, .popup-wrapper button::before {
    display: block
}

body {
    &:not(.touch-device) {
        .popup-wrapper {
            .popup-main {
                .buttons-holder {
                    button {
                        &:hover {
                            background-color: #515151
                        }

                        &:active {
                            background-color: #3d3d3d
                        }
                    }
                }

                .close-icon-holder {
                    button {
                        &.bil-icon-close {
                            &:hover {
                                background-color: rgba(0, 0, 0, .1)
                            }
                        }
                    }
                }
            }
        }
    }
}