    <div class="control-wrapper form-group">
        <label class="label alt-text-label" for="alt-txt-{{modelID}}">Alt Text: </label>
        <input type="text" class="alt-text-class form-control" id="alt-txt-{{modelID}}" value="{{altText}}" />
