<div class="designer">
    <div class="section-title">
        <h3>Position triangle in pattern:</h3>
    </div>
    <div class="selected-pattern {{selectedImg}}">
        <div class="triangle-selector">
            <div class="triangle-outer">
                <div class="triangle-inner">
                    <div class="triangle-border top-border"></div>
                    <div class="triangle-border bottom-border"></div>
                    <div class="triangle-border right-border"></div>
                </div>
            </div>
        </div>
    </div>
    {{#if auto}}
    <button class="auto">Start/Stop</button>
    {{/if}}
</div>